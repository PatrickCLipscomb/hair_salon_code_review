<div class="col-sm-6">
  <h2>Add a new stylist</h2>
  <form action="/new_stylist" method="post">
    <input type="hidden" name="_method" value="patch">
    <div class="form-group row">
      <label for="name" class="col-sm-2 form-control-label">Stylist Name</label>
      <div class="col-sm-10">
        <input class="form-control" type="text" name="name" value="">
      </div>
    </div>
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-success">Add Stylist</button>
    </div>
  </form>
</div>
<div class="col-sm-6">
  <h2>List of your stylists:</h2>
  <% if @stylists %>
    <ul>
      <% @stylists.each() do |stylist| %>
        <li><a href="/stylist/<%= stylist.id %>"><%= stylist.name %></a></li>
      <% end %>
    </ul>
  <% else %>
    <h4>You don't have any stylists yet.</h4>
  <% end %>
</div>
