
<div class="col-sm-6">
  <h2>List of your stylists:</h2>
  <% if @stylists %>
    <ul class='cent well'>
      <% @stylists.each() do |stylist| %>
        <li class='list'><a class='link' href="/stylist/<%= stylist.name %>"><%= stylist.name %></a></li>
      <% end %>
    </ul>
  <% else %>
    <h4>You don't have any stylists yet.</h4>
  <% end %>
  <hr class="tpadding">
  <a class="navigation" href="/stylists/new" class="btn-lrg">Add some stylists</a>
</div>

<div class="col-sm-6">
  <h2>List of your clients:</h2>
  <% if @clients %>
    <ul class='cent well'>
      <% @clients.each() do |client| %>
        <li class="list2"><p class="link2"><%= client.name %></p></li>
      <% end %>
    </ul>
  <% else %>
    <h4>You don't have any clients yet.</h4>
  <% end %>
  <hr class="tpadding">
  <a class="navigation" href="/clients/new" class="btn-lrg">Add clients and assign to stylists</a>
</div>
