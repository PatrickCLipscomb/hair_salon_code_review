
<div class="col-sm-6">
  <h2>List of your stylists:</h2>
  <% if @stylists %>
    <ul class='cent'>
      <% @stylists.each() do |stylist| %>
        <li class='list'><a class='link' href="/stylist/<%= stylist.name %>"><%= stylist.name %></a></li>
      <% end %>
    </ul>
  <% else %>
    <h4>You don't have any stylists yet.</h4>
  <% end %>
  <hr class="tpadding">
  <a class="navigation" href="/add_new_stylists" class="btn-lrg">Add some stylists</a>
</div>

<div class="col-sm-6">
  <h2>List of your clients:</h2>
  <% if @clients %>
    <ul class='cent'>
      <% @clients.each() do |client| %>
        <li class="list2"><a class="link2" href="/client/<%= client.id %>"><%= client.name %></a></li>
      <% end %>
    </ul>
  <% else %>
    <h4>You don't have any clients yet.</h4>
  <% end %>
  <hr class="tpadding">
  <a class="navigation" href="/add_new_clients" class="btn-lrg">Add clients and assign to stylists</a>
</div>
