<div class="col-sm-6">
  <h2>Choose a stylist to add a client to</h2>
  <form class="well" action="/new_client" method="post">
    <div class="form-group row">
      <label for="stylist_id" class='col-sm-2 form-control-label'>Sylist</label>
      <div class="col-sm-10">
        <select id="stylist_id" name="stylist_id" class="form-control" type="text">
          <% @stylists.each() do |stylist| %>
            <option value="<%= stylist.id() %>"><%= stylist.name() %></option
          <% end %>
        </select>
      </div>
    </div>
    <div class="form-group row">
      <label for="name" class="col-sm-2 form-control-label">Client Name</label>
      <div class="col-sm-10">
        <input class="form-control" type="text" name="name" value="">
      </div>
    </div>
    <div class="col-sm-offset-1 col-sm-11">
      <button type="submit" class="btn btn-success">Add Client</button>
    </div>
  </form>
</div>
